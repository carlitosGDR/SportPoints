<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tipo_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dannyang27.sportpoints.TipoUsuario">

    <Button
        android:text="Jugador"
        android:layout_below= "@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/jugador_btn"
        android:textSize="18sp" />

    <Button
        android:text="Arbitro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jugador_btn"
        android:layout_alignStart="@+id/jugador_btn"
        android:id="@+id/arbitro_btn"
        android:textSize="18sp" />

    <Button
        android:text="Centro Deportivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arbitro_btn"
        android:layout_alignStart="@+id/arbitro_btn"
        android:id="@+id/centro_deportivo_btn"
        android:textSize="18sp" />

    <TextView
        android:text="ENTRAR COMO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:id="@+id/texto"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="ATRAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centro_deportivo_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/atras_btn_1"
        android:textSize="18sp" />


</RelativeLayout>
